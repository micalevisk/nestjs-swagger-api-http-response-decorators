{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": ".",
    "rootDir": ".",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "scripts"
  ]
}
